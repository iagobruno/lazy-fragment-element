{
  "compilerOptions": {
    "outDir": "dist",
    "module": "es2020",
    "target": "es2017",
    "useDefineForClassFields": true,
    "moduleResolution": "Node",
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "removeComments": true,
    "declaration": true
  },
  "include": [
    "src"
  ]
}
